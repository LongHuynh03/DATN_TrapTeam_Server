<div class="vh-100">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <div class="text-center mb-3">
                                        <img src="images/logo.png" alt="">
                                    </div>
                                    <h1 class="text-center mb-4">ĐĂNG NHẬP</h1>
                                    <form action="/login" method="post" name="formLogin" onsubmit="return(validate());">
                                        <div class="mb-3">
                                            <label class="mb-1">
                                                <strong>Tài khoản</strong>
                                            </label>
                                            <input placeholder="Tài khoản" type="text" class="form-control" value=""
                                                name="account">
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1">
                                                <strong>Mật khẩu</strong>
                                            </label>
                                            <input placeholder="********" type="password" class="form-control" value=""
                                                name="password">
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                                        </div>
                                    </form>
                                    <div class="col-sm-12 mt-3 justify-content-center align-items-center">
                                        <p class="mb-0 text-center">
                                            TRAP TEAM
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    function validate() {
        if (document.formLogin.account.value == "") {
            alert("Không được để trống thông tin");
            return false;
        }
        if (document.formLogin.password.value == "") {
            alert("Không được để trống thông tin");
            return false;
        }
        if (document.formLogin.account.value == "admin" &&
            document.formLogin.password.value == "111") {
            return true;
        }
        else {
            alert("Sai thông tin đăng nhập");
            return false;
        }
        return (true);
    }

</script>