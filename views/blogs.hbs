<script>

    const fectAPI = async (url, option) => {
        const fech = await fetch(url, option);
        return fech.json();
    }
    const deleteProduct = async (id) => {
        const url = `/cpanel/blogs/${id}/deleted`;
        const options = {
            method: "get",
            headers: { 'Content-Type': 'application/json' }
        };
        try {
            const result = await fectAPI(url, options);
            console.log(result);
            if (result) {
                swal({
                    title: "Success",
                    text: "Delete Success !!!",
                    icon: "success",
                    buttons: true,
                }).then((willDelete) => {
                    if (willDelete) {
                        window.location.reload();
                    }
                });
            } else {
                alert("Delete Failed!");
            }
        }
        catch (e) {
            console.log("Delete failed: " + e);
        }
    }

    const confirmDelete = (id) => {
        console.log("Delete: " + id);
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this imaginary file!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    deleteProduct(id);
                }
            });
    }

</script>